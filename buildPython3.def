Bootstrap: docker
From: ubuntu:18.04
Stage: build

%post
apt update
apt upgrade -y
apt install software-properties-common -y
add-apt-repository universe -y
apt update
apt install python3-pip -y
pip3 install geopy
python3 -m pip install --upgrade optspec
apt install gocryptfs -y

#done with install..
#Lets add some cool items

BUILD_DATE=`date -R`
echo "export BUILD_DATE=\"${BUILD_DATE}\"" >> $SINGULARITY_ENVIRONMENT

%environment
	export PATH=/usr/bin/gocryptfs:$PATH

%runscript
    echo "This container was built on ${BUILD_DATE}"
    echo "Usage:"
    echo "singularity exec ${SINGULARITY_NAME} python3 [pythoncode.py] [inputs to code]"
    echo " "
    echo "To see what modules were installed type"
    echo "singularity exec ${SINGULARITY_NAME} pip3 list"
    echo " "
    echo "The runscript can be run via"
    echo "    singularity run ${SINGULARITY_NAME}"
    echo "    or"
    echo "    ./${SINGULARITY_NAME}"
    echo "The help menu can be run via"
    echo "    singularity run-help ${SINGULARITY_NAME}" 
    echo "The lables can be printed via"
    echo "    singularity inspect ${SINGULARITY_NAME}"  


%labels
    Author Dr. John Nehrbass
    ClassName Cloud Computing
    ClassID ceg7380
    StudentCount 34
    TimesTaught 6
    Year	Fall2025
    
%help
This container uses ubuntu 18.04, python3,
and includes the python3 modules:
geopy and optspec


